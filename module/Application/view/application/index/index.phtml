            <div class="panel-body" id="vueApp-lista-tabela">

                <div class="form-group">
                    <input type="text"
                        class="form-control"
                        id="ds_busca"
                        placeholder="Buscar"
                        v-model="ds_filtro">
                </div>

                <table class="table">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>Tabela</th>
                        <th>Descrição</th>
                        <th>Ligações</th>
                    </tr>
                    </thead>

                    <tbody>
                        <tr v-for="arrValores in arrTabelas">
                            <th scope="row">{{arrValores.id}}</th>
                            <td>{{arrValores.ds_nome}}</td>
                        <tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Discover Modules</h3>
